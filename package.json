    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.8.6",
        "esbuild": "^0.19.5",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "minimist": "^1.2.8",
        "prettier": "^3.0.3"
    }
}
